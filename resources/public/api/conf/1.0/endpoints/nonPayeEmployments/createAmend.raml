displayName: Create and Amend Non-PAYE employment income
description: "This endpoint allows a developer to create and amend Non-PAYE employment income. A National Insurance number and tax year must be provided. This endpoint can only be used after the tax year has ended."
(annotations.sandboxData): !include ../../scenarios/defaultAndNotFound.md
(annotations.scope): "write:self-assessment"
securedBy: [ sec.oauth_2_0: { scopes: [ "write:self-assessment" ] } ]
body:
   application/json:
      type: !include ../../schemas/create_amend_non_paye_employment_income_request.json
      example: !include ../../examples/nonPayeEmployments/create_amend_request.json
responses:
  200:
    body:
      application/json:
        type: !include ../../schemas/employments_amend_non_paye_response.json
        example: !include ../../examples/nonPayeEmployments/create_amend_response.json
