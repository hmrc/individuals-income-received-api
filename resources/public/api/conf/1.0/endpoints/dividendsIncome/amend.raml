displayName: Create and Amend Dividends Income [test only]
description: "This endpoint allows the developer to create and amend dividends income: foreign dividend, dividend income received whilst abroad, stock dividend, redeemable shares, bonus issues of securities and close company loans written off. A National Insurance number and tax year must be provided."
(annotations.sandboxData): !include ../../scenarios/dividendsIncome/put.md
(annotations.scope): "write:self-assessment"
securedBy: [ sec.oauth_2_0: { scopes: [ "write:self-assessment" ] } ]
body:
   application/json:
      type: !include ../../schemas/dividends_amend_request.json
      examples:
        full_amendment:
          description: Full Dividend Income Amendment
          value: !include ../../examples/dividendsIncome/amend_request.json
responses:
  200:
    body:
      application/json:
        type: !include ../../schemas/dividends_amend_response.json
        example: !include ../../examples/dividendsIncome/amend_response.json
    headers:
      X-CorrelationId:
        example: c75f40a6-a3df-4429-a697-471eeec46435
        description: Unique ID for operation tracking <br> String, 36 characters.
